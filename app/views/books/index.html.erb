<header>
  <h1 class="heading">
    Books
  </h1>
</header>

<main>
  <section class="books">
    <div class="book-box">
      <div class="book-item">
        <table width="800">
          <thead>
            <tr>
              <th class="book-text-heading">Title</th>
              <th class="book-text-heading">Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <!-- ここから繰り返し -->
          <% @books.each do |book| %>
            <tbody>
              <tr>
                <td class="book-title"><%= book.title %></td>
                <td class="book-body"><%= book.body %></td>
                <td class="book-show"><%= link_to "Show", book_path(book.id) %></td>
                <td class="book-edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td class="book-destroy"><%= link_to "Destroy", book_path(book.id), method: :delete %></td>

              </tr>
            </tbody>
          <% end %>
          <!-- ここまで繰り返し -->
        </table>
      </div>
    </div>
  </section>
  <section class="new">
    <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <% if @book.errors.any? %>
          <h5><%= @book.errors.count %> errors prohibited this book from being saved:</h5>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
  </section>
</main>